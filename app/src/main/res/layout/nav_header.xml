<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/nav_header_profile_image"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/anime_doc" />

    <TextView
        android:id="@+id/user_name_navHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_header_profile_image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Nandu"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_user_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_navHeader"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="email"
        android:textColor="#000" />

    <View
        style="@style/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_user_mail" />

</RelativeLayout>